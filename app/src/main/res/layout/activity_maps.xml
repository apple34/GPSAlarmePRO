<?xml version="1.0"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="false">
        <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:titleTextColor="@android:color/white"
                android:subtitleTextColor="@android:color/white"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                tools:context=".MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment">

            </fragment>
        </LinearLayout>

    </FrameLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:id="@+id/menuFloat"
        android:layout_margin="8dp"
        android:layout_gravity="bottom|end"
        app:fab_addButtonColorNormal="#fafafa"
        app:fab_addButtonPlusIconColor="@color/colorAccent"
        app:fab_addButtonColorPressed="#f1f1f1"
        app:layout_behavior="br.com.abner.naopassedalinha3.FloatingActionsMenuBehavior">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/minfab1"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            app:fab_size="mini"
            app:fab_icon="@drawable/map"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/colorSecondDark"
            app:layout_behavior="br.com.abner.naopassedalinha3.FloatingActionButtonBehavior"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/minfab2"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            app:fab_size="mini"
            app:fab_icon="@drawable/marker50"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/colorSecondDark"
            app:layout_behavior="br.com.abner.naopassedalinha3.FloatingActionButtonBehavior"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/minfab3"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            app:fab_size="mini"
            app:fab_icon="@drawable/info"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/colorSecondDark"
            app:layout_behavior="br.com.abner.naopassedalinha3.FloatingActionButtonBehavior"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="bottom|end"
        app:fab_icon="@drawable/icon3_white_small_marker_192"
        app:fab_colorNormal="@color/colorAccent"
        app:layout_behavior="br.com.abner.naopassedalinha3.FloatingActionButtonBehavior" />

</android.support.design.widget.CoordinatorLayout>



